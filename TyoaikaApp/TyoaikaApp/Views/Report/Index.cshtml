@model TyoaikaApp.Models.Report
@{
    ViewBag.Title = "Raportit";
}

<h1>Raportit</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Työntekijä:", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownList("ApplicationUserID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Alkupäivä:", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor( model => model.StartDate, null, htmlAttributes: new { @class = "form-control", @id = "datepicker1" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Loppupäivä:", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor( model => model.EndDate, null, htmlAttributes: new { @class = "form-control", @id = "datepicker2" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i> Hae raportti</button>
            </div>
        </div>

    </div>
}
